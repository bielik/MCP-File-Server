{
  "name": "mcp-research-file-server-backend",
  "version": "1.0.0",
  "description": "Backend - Multimodal MCP File Server for Research Proposal Development",
  "main": "dist/src/main.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/src/main.js",
    "check:prereqs": "tsx ../scripts/check-prerequisites.ts",
    "test": "vitest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write **/*.{ts,json}",
    "qdrant:start": "docker-compose -f ../docker/docker-compose.yml up -d",
    "qdrant:stop": "docker-compose -f ../docker/docker-compose.yml down",
    "qdrant:reset": "docker-compose -f ../docker/docker-compose.yml down && docker-compose -f ../docker/docker-compose.yml up -d",
    "qdrant:logs": "docker-compose -f ../docker/docker-compose.yml logs -f",
    "index:docs": "tsx ../scripts/index-documents.ts",
    "index:check": "tsx ../scripts/validate-search.ts",
    "logs": "tail -f ../logs/mcp-research-server.log",
    "health": "tsx ../scripts/health-check.ts",
    "test:search": "tsx ../scripts/test-search.ts",
    "test:files": "tsx ../scripts/test-file-system.ts",
    "test:files:samples": "tsx ../scripts/test-file-system.ts --create-samples",
    "dev:mcp": "tsx server/index.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "research",
    "multimodal",
    "ai-assistant",
    "file-server"
  ],
  "author": "MCP Research Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@qdrant/js-client-rest": "^1.8.2",
    "@xenova/transformers": "^2.14.0",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "chokidar": "^3.5.3",
    "flexsearch": "^0.7.43",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/mime-types": "^2.1.4",
    "@types/pdf-parse": "^1.1.1",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@playwright/test": "^1.40.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}