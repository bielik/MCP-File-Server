# Test Environment Configuration
# Phase 3 Step 1: Search Service Integration Tests

# Node Environment
NODE_ENV=test

# MCP Server Configuration (Test Ports)
MCP_PORT=3001
MCP_HOST=localhost
WEB_UI_PORT=3005

# Test File System Permissions (Use temporary test directories)
CONTEXT_FOLDERS=./tests/fixtures/context
WORKING_FOLDERS=./tests/fixtures/working
OUTPUT_FOLDER=./tests/fixtures/output
MAX_FILE_SIZE=10485760
MAX_FILES_PER_DIRECTORY=100

# Vector Database Configuration (Test Instance)
QDRANT_URL=http://localhost:6334
QDRANT_COLLECTION_PREFIX=test_mcp
QDRANT_API_KEY=

# M-CLIP Configuration (Test Instance)  
MCLIP_SERVICE_URL=http://localhost:8003
MCLIP_MODEL_NAME=sentence-transformers/clip-ViT-B-32-multilingual-v1
MCLIP_CACHE_DIR=./tests/fixtures/models/mclip
EMBEDDING_DIMENSION=512

# Document Processing (Test Configuration)
DOCLING_SERVICE_URL=http://localhost:8004
DOCLING_MAX_PAGES=10
IMAGE_EXTRACTION=true
LANGUAGES=en,de
CHUNK_SIZE=400
CHUNK_OVERLAP=20

# Performance & Caching (Test Optimized)
ENABLE_CACHING=false
CACHE_TTL=60
MAX_CONCURRENT_PROCESSING=2

# Logging (Silent for Tests)
LOG_LEVEL=error
LOG_FILE=./tests/logs/test.log

# Test-Specific Configuration
TEST_TIMEOUT=10000
TEST_RETRY_COUNT=3
MOCK_EXTERNAL_SERVICES=true
DISABLE_NETWORK_CALLS=true

# Search Service Test Configuration
TEST_SEARCH_RESULTS_COUNT=5
TEST_EMBEDDING_DIMENSIONS=512
TEST_SIMILARITY_THRESHOLD=0.7
TEST_MAX_QUERY_LENGTH=1000

# Service Health Check Intervals (Test)
HEALTH_CHECK_INTERVAL=1000
SERVICE_RETRY_DELAY=100
MAX_RETRY_ATTEMPTS=3